<UserControl x:Class="Debugger.SearchParameterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:debugger="clr-namespace:Debugger"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="800">
    <UserControl.DataContext>
        <debugger:SearchParameterViewModel x:Name="View"/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="500*" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0" ItemsSource="{Binding OperatorOptions}" SelectedItem="{Binding SelectedOperator}" />
        <ComboBox Grid.Column="1" ItemsSource="{Binding LogicalOperatorOptions}"
                  SelectedItem="{Binding SelectedLogicalOperator}" />
        <TextBox Grid.Column="2" Text="{Binding EntryText}" />
        <Button Content="Delete" Grid.Column="3" Command="{Binding DeleteCommand}" />
    </Grid>
</UserControl>