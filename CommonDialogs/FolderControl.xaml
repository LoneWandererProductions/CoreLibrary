<UserControl x:Class="CommonDialogs.FolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:common="clr-namespace:CommonDialogs"
             DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <!-- Row/Column Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>

        <!-- Display Path -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   Text="{Binding Paths}" TextWrapping="Wrap"
                   VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                   Background="White"/>

        <!-- Input Path -->
        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                 Text="{Binding LookUp}" TextWrapping="Wrap" VerticalAlignment="Center"/>

        <!-- Navigation Buttons -->
        <Button Content="Up" Grid.Row="0" Grid.Column="3" Click="BtnUpClick"/>
        <Button Content="Go" Grid.Row="2" Grid.Column="3" Click="BtnGoClick"/>
        <Button Content="Exp" Grid.Row="2" Grid.Column="5" Click="BtnExplorerClick"/>

        <!-- Shortcut Buttons -->
        <Button Content="Desktop" Grid.Row="6" Grid.Column="0" Click="BtnDesktopClick"/>
        <Button Content="Root" Grid.Row="4" Grid.Column="0" Click="BtnRootClick"/>
        <Button Content="Docs" Grid.Row="8" Grid.Column="0" Click="BtnDocsClick"/>
        <Button Content="Personal" Grid.Row="10" Grid.Column="0" Click="BtnPersonalClick"/>
        <Button Content="Pictures" Grid.Row="12" Grid.Column="0" Click="BtnPictureClick"/>
        <Button Content="Folder" Grid.Row="14" Grid.Column="0" Click="BtnFolderClick"/>

        <!-- TreeView -->
        <TreeView x:Name="FoldersItem" Grid.Row="4" Grid.Column="2" Grid.RowSpan="13"
                  Grid.ColumnSpan="4" SelectedItemChanged="FoldersItemSelectedItemChanged"
                  Background="White" BorderBrush="White" Foreground="Black"
                  ItemsSource="{Binding FolderItems}">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="20" Height="20" Stretch="Fill"
                                           Source="{Binding Header, Converter={x:Static common:HeaderToImageConverter.Instance}}"/>
                                    <TextBlock Text="{Binding Header}" Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.Resources>
        </TreeView>
    </Grid>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CommonDialogs;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
</UserControl>
